<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>


<VBox fx:controller="controller.Trip.BookTripController"  xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="600.0" spacing = "20" styleClass="background" alignment="CENTER">
    <ImageView>
        <image>
            <Image url="@/image/trip.png" />

        </image> 
    </ImageView>
        <Separator />

    <HBox  alignment ="CENTER">
    <Label text = "Hi " styleClass = "Label"/>
    <Label fx:id = "nameLabel" styleClass="Label"/>
    <Label text = ", Welcome to the Trips section" style="Label"/> 
    </HBox>
    <Separator />


    
    <HBox alignment ="CENTER" >
        <Button fx:id="AddDestination" text="Add Destination" onAction = "#handleAddDestination" prefHeight = "150" prefWidth ="400"  styleClass ="Button"/>
        <Button fx:id="RemoveDestination" text="Remove Destination" onAction = "#handleRemoveDestination" prefHeight = "100" prefWidth ="400" styleClass ="Button"/>
        <Button fx:id="AddConnectingFlight" text="Add Connecting Flight" onAction = "#handleAddConnectingFlights"  prefWidth ="400" prefHeight = "100" styleClass ="Button"/>
        <Button fx:id="ViewTrip" text="View Trip" onAction ="#viewTrip" GridPane.columnIndex ="3" prefWidth ="425" prefHeight = "200"/>
        <Button fx:id="Exit" text="Close" onAction ="#handleExit" prefWidth ="400" prefHeight = "100" styleClass ="Button"/>
    </HBox>
    <stylesheets>
    <URL value ="@../style.css"/>
    </stylesheets> 
        </VBox>

